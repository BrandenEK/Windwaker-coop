<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>disable</Nullable>
    <Description>The client application for Windwaker Co-op</Description>
    <Version>0.1.0</Version>
    <Authors>BrandenEK</Authors>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>windwaker.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="windwaker.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SuperSimpleTcp" Version="3.0.11" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <Target Name="Development" AfterTargets="PostBuildEvent">

    <!-- Copy application to export folder and zip it -->
    <ItemGroup>
      <BuildFolder Include="$(OutDir)*" />
    </ItemGroup>
    <PropertyGroup>
      <ExportFolder>$(SolutionDir)Export\$(AssemblyName)</ExportFolder>
    </PropertyGroup>
    <Copy SourceFiles="@(BuildFolder)" DestinationFolder="$(ExportFolder)" />
    <ZipDirectory SourceDirectory="$(OutDir)" DestinationFile="$(ExportFolder)\..\$(TargetName).zip" Overwrite="true" />

  </Target>

</Project>